{
	"compilerOptions": {
		"moduleResolution": "bundler",
		"target": "esnext",
		"module": "esnext",
		"declaration": true,
		"strict": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"noUncheckedIndexedAccess": true,
		"verbatimModuleSyntax": true,
		"skipLibCheck": true,
    "outDir": "dist"
	},
	"include": [
		"src/index.ts"
	],
	"exclude": ["node_modules", "dist"]
}
